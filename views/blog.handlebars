<div class="card field container is-blog" data-blog="{{id}}">
  <header class="card-header has-background-grey-light">
    <p class="card-header-title column is-size-2 ">
        {{title}}
    </p>
    <p class="is-right">
        Created by {{user.username}} on {{format_date date_created}}
    </p>
  </header>
  <div class="card-content">
    <div class="content is-size-4">
      {{content}}
    </div>
  </div>
</div>
{{#each comments as |comment|}}
{{>comment-details}}
{{/each}}
{{!-- {{>comment-form}} --}}
<div class="card field container is-comment" >
  <header class="card-header has-background-grey-light">
    <p class="card-header-title column is-size-5 ">
        Add Comment
    </p>
  </header>
  <form class="card-content comment-form">
    <div class="field">
        <div class="control">
            <textarea class="textarea" id="comment" placeholder="Textarea"></textarea>
        </div>
    </div>
    <div class="control">
      <button class="button has-background-grey-light">Submit</button>
    </div>
  </form>
</div>